<!-- ユーザーの詳細 -->
<div>
  <%= image_tag 'default-image' %>
  <table>
    <td><strong>name</strong><%= @book.name %></td>
    <td><strong>ontroduction</strong><%= @book.name %></td>
  </table>
</div>

<!-- ユーザーの投稿一覧 -->

<div>
  <table>
    <thead>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag 'default-image' %></td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
